<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer (Creates the card shadow effect) -->
    <item
        
        android:right="4dp"
        android:top="4dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">

            <!-- Soft Shadow Color -->
            <solid android:color="#B3AAAAAA" />

            <!-- Rounded Corners for the Shadow -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main Card with Red Border -->
    <item>
        <shape android:shape="rectangle">

            <!-- Card Background (White) -->
            <solid android:color="#FFFFFF" />

            <!-- Elegant Red Border -->
            <stroke
                android:width="3dp"
                android:color="#FF6347" />

            <!-- Smooth Rounded Corners -->
            <corners android:radius="16dp" />

        </shape>
    </item>

</layer-list>
