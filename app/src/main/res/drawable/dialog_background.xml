<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Outer border -->
            <corners android:radius="20dp" />
        </shape>

    </item>

    <!-- Inner Stroke (Inset to appear inside outer border) -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" /> <!-- Inner background -->
            <stroke android:width="2dp" android:color="#090808" /> <!-- Inner border -->
            <corners android:radius="16dp" />
            <gradient
                android:angle="45"
                android:startColor="#99263ED1"
                android:endColor="#99B0E0E6"/>

        </shape>
    </item>
</layer-list>
