<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Blur Effect (Requires RenderScript) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#990B25D2"
                   android:endColor="#99F0F8F8"/>  <!-- Slightly Darker Blue with Transparency -->
            <corners android:radius="16dp"/>  <!-- Rounded Corners -->
        </shape>
    </item>

</layer-list>
