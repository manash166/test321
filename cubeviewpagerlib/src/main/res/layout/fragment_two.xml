<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_groom_bride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/delius_swash"
        android:text="Bride and Groom Packages"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <!--Women Card-->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/brideGif"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:background="@drawable/rbm" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/variablefont"
                    android:padding="5dp"
                    android:text="Bride\nSpecial"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_for_bride"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/add"
                    app:icon="@drawable/add"
                    app:iconTint="#fff"
                    android:text="ADD"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/glowStar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/stars" />

                        <TextView
                            android:id="@+id/text_overlay"
                            android:fontFamily="@font/mozilla"

                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="8dp"
                             android:backgroundTint="@color/pink"
                            android:background="#66B11D1D"
                            android:paddingTop="4dp"

                            android:text="Add and Customize\n Your Pack"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </FrameLayout>







            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!--Men Linear Layout-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/variablefont"
                    android:padding="5dp"
                    android:text="Groom\nSpecial"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="25dp"
                    android:textStyle="bold" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:contentDescription="@string/add"
                    android:text="ADD"
                    app:iconTint="#fff"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    app:icon="@drawable/add" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/glowStar2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/stars" />

                        <TextView
                            android:id="@+id/text_overlay_groom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/mozilla"
                            android:paddingTop="5dp"
                            android:text="Add and Customize\n Your Pack"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:background="#441C09"
                            android:textStyle="bold" />
                    </LinearLayout>

                </FrameLayout>



            </LinearLayout>

            <ImageView
                android:id="@+id/groomGif"
                android:layout_width="195dp"
                android:layout_height="180dp"
                android:background="@drawable/rbf" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
